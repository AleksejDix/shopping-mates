---
layout: default
---

<section class="section section--mates-list">
  <div class="container">

  <div class="filter">
    <h1 class="title title--separator">
      {{ page.title }}
    </h1>
    <div class="filter-list">
      {% for page in site.topics  %}
        <a href="{{ page.url | prepend: site.baseurl }}">{{ page.title }}</a>
      {% endfor %}
    </div>
  </div>

  <ul class="list-inline grid grid--waffle">
    {% for page in site.posts %}
      <div class="grid__item grid__item--1-3">
        {% include card.liquid %}
      </div>
    {% endfor %}
  </ul>

  </div>
</section>

