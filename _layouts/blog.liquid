---
layout: default
---

<div class="page-width">
  <h1 class="title title--separator title--h1">
    {{ page.title }}
  </h1>
<nav>

{% for page in site.topics  %}
  <a href="{{ page.url | prepend: site.base_url }}">{{ page.title }}</a>
{% endfor %}
</nav>

<div class="grid grid--waffle">
{% for page in site.posts %}
  <div class="grid__item grid__item--1-3">
    {% include post-card.liquid %}
  </div>
{% endfor %}
</div>

</div>
