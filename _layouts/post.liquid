---
layout: default
---

{% if page["header image"] contains "cdn.siroop.ch" %}
  {% assign headerImage = page["header image"] %}
{% else %}
  {% assign headerImage = page["header image"] | prepend: site.baseurl %}
{% endif %}

<article class="post">
  <div class="container">
    <div class="post__header">
      <h1 class="post__title title title--separator u-hyphenate"><a href="{{ page.url | prepend: site.baseurl }}">{{ page.title }}</a></h1>
      {% include topic-indicator.liquid %}
    </div>

    <div class="post__image">
      <img src="{{ headerImage }}" alt="">
    </div>

    {% include tag-list.liquid icon="true" tags=page.tags %}

    <div class="article-content js-article-content">
      {{ page.content | markdownify }}
    </div>


    <div class="section">
      {% include sharring-buttons.liquid %}
    </div>

    <div class="post__author">
      {% include post__author.liquid %}
    </div>

    <div class="prev-next grid">
        {% if page.previous %}
          <a class="prev" href="{{ page.previous.url | prepend: site.baseurl }}" rel="prev">Älter</a>
        {% endif %}

        {% if page.next %}
        <a class="next" href="{{ page.next.url | prepend: site.baseurl }}" rel="next">Neuer</a>
        {% endif %}
    </div>

  </div>

</article>

<section class="section content--secondary">
  <div class="container">
    <h1 class="title title--separator title--h1">Ähnliche Beiträge</h1>
  </div>
  <div class="container grid grid--waffle">
    {% for page in site.related_posts limit:3 %}
      <div class="grid__item grid__item--1-3">
        {% include card.liquid  %}
      </div>
    {% endfor %}
  </div>
</section>
