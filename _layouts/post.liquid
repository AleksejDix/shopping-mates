---
layout: default
---

{% if page["header image"] contains "cdn.siroop.ch" %}
  {% assign headerImage = page["header image"] %}
{% else %}
  {% assign headerImage = page["header image"] | prepend: site.baseurl %}
{% endif %}

<article class="post">
  <div class="container">
    <div class="post__header text-center">
      <header class="title--on-line__wrapper">
        <h1 class="post__title title title--on-line">{{ page.title }}</h1>
      </header>
      <div class="caption">
        <span>in</span> {% include topic-indicator.liquid %} <span>am <time datetime="{{ page.date }}">{{ page.date | date_to_string }}</time></span>
      </div>
    </div>

    <div class="post__banner ratio ratio--16x9" style="background-image: url({{ headerImage }})"></div>



    <div class="article-content js-article-content container--small">
      {{ page.content | markdownify }}
    </div>


    <div class="section container--small">
      {% include tag-list.liquid %}
      {% include sharring-buttons.liquid %}
    </div>

    <div class="post__author container--small">
      {% include post__author.liquid %}
    </div>

    {% include prev-next.liquid %}

  </div>

</article>

<section class="section content--secondary">
  <div class="container">
    <header class="title--on-line__wrapper">
      <h2 class="title title--on-line">mehr Artikel</h2>
    </header>
  </div>
  <div class="container grid grid--waffle">
    {% for page in site.related_posts limit:3 %}
      <div class="grid__item grid__item--1-3">
        {% include card.liquid  %}
      </div>
    {% endfor %}
  </div>
</section>
