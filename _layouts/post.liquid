---
layout: default
---

<article class="post">
  {{ page.topic }}
  <div class="post-image-holder ratio ratio--16x7 grey-bg">
    {% if post["header image"] contains "cdn.siroop.ch" %}
      {% assign headerImage = post["header image"] %}
    {% else %}
      {% assign headerImage = post["header image"] | prepend:site.baseurl %}
    {% endif %}
    <div class="ratio-content cover" style="background-image: url({{ headerImage }})">
      <header class="single-post-header page-width">
        <h1 class="title title--separator">
          {{ page.title }}
        </h1>
      </header>
    </div>
  </div>
  <div class="page-width">
{% comment %}
  <div class="post-meta">
    {% assign mates = site.mates | where:"title", page.mate %}
    {% for mate in mates %}
      {% unless mate.title == page.title %}
        <span class="post-author"><a href="{{ mate.url | prepend:site.baseurl }}">{{ mate.title }}</a></span>
      {% endunless %}
    {% endfor %}
  </div>
{% endcomment %}

  <div class="article__body js-article__body" itemprop="articleBody">
    {% assign words = page.content  | number_of_words %}

      {{ words | divided_by: site.readingspeed }} mins

    {{ page.content | markdownify }}
  </div>

  <div class="box grid">
      {% if page.previous %}
      <a class="prev" href="{{ page.previous.url | prepend: site.baseurl }}" rel="prev">Ã„lter</a>
      {% endif %}

      {% if page.next %}
      <a class="next" href="{{ page.next.url | prepend: site.baseurl }}" rel="next">Neuer</a>
      {% endif %}
  </div>

</div>

</article>



<div class="page-width">
  <div class="grid grid--waffle">
    {% for page in site.related_posts limit:3 %}
      <div class="grid__item grid__item--1-3">
        {% include post-card.liquid  %}
      </div>
    {% endfor %}
  </div>
</div>


{% if site.tags.size > 0 %}

<h3>Related post</h3>

{% for post in site.posts %}

    {% assign sameTagCount = 0 %}

    {% for tag in post.tags %}
        {% if page.tags contains tag %}

          {% assign sameTagCount = sameTagCount | plus: 1 %}
          {% capture tagmarkup %} <span class="label label-default">{{ tag }}</span> {% endcapture %}

        {% endif %}
    {% endfor %}

    {% if sameTagCount >= 1 %}

        {% include post-card.liquid  %}

    {% endif %}

{% endfor %}
{% endif %}
