---
layout: default
---

<div class="page-width">
  <h1 class="title title--separator title--h1">
    News & Stories
  </h1>
  <div class="grid grid--waffle">
    {% for post in site.posts offset: 0 limit: 6 %}
      <div class="grid__item grid__item--1-3">
      {% include post.liquid  %}
      </div>
    {% endfor %}
  </div>
</div>

{% if site.mates.size > 0 %}
<div class="page-width">
  <h2 class="title title--separator title--h1">
    Die Shopping Mates
  </h2>
  <div class="grid grid--waffle">
  {% assign mates = site.mates | sort: 'position' %}
  {% for mate in mates %}
    <div class="grid__item grid__item--1-3">
      <a href="{{ mate.url | prepend: site.baseurl }}">
        <img src="{{ mate.image | prepend: site.baseurl }}" alt="{{ mate.title }}">
      </a>
    </div>
  {% endfor %}
  </div>
</div>
{% endif %}


<a href="{{ "/feed.xml" | prepend: site.baseurl }}">via RSS</a>
