---
layout: default
---

<div class="page-width">
  <h1 class="title title--separator title--h1">
    {{ page.title }}
  </h1>
</div>

{% assign topics = site.posts | where: "topic", page.title %}

<div class="page-width">
  <div class="grid grid--waffle">
    {% for page in topics %}
      <div class="grid__item grid__item--1-3">
        {% include post-card.liquid  %}
      </div>
    {% endfor %}
  </div>
</div>

