---
layout: default
---

<section class="section">
  <div class="container">
    <div class="grid">
      <div class="grid__item grid__item--3-13">
        <img class="mate-image" src="{{ page.avatar-image | prepend: site.baseurl }}" alt="">
      </div>
      <div class="grid__item grid__item--5-13">
      <header class="title--on-line__wrapper">
        <h1 class="title title--on-line">{{ page.title }}</h1>
      </header>
        <div class="article-content">
          {{ page.content | markdownify }}
        </div>
        <a href="{{ page.favourite-product.product-url }}">
        <figure>
          <img src="{{ page.favourite-product.product-image }}" alt="">
          <figcaption>
            {{ page.favourite-product.product-description | markdownify }}
          </figcaption>
        </figure>
        </a>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <header class="title--on-line__wrapper">
      <h1 class="title title--on-line">{{ page.title }}</h1>
    </header>
  </div>
</section>

<section class="section">
  <header class="title--on-line__wrapper">
    <h1 class="title title--on-line">was es von mir zu lesen gibt</h1>
  </header>
  {% assign posts = site.posts | where: "mate", page.title %}
  <div class="container">
    <div class="grid grid--flex grid--waffle">
      {% for page in posts %}
        <div class="grid__item grid__item--1-3">
          {% include card.liquid  %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>



