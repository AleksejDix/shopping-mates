---
layout: default
---

<div class="split-view">

  <div class="split cover" style="background-image: url({{ page.image | prepend: site.baseurl }})">
    {{ page.title }}
  </div>

  <div class="split scroll">
    <div class="container">

    {{ page.title }}
    <div class="post-content">
      {{ content | markdownify }}
    </div>

    {% assign posts = site.posts | where: "mate", page.title %}

    {% if posts.size > 0 %}
      <div>{{ page.title }} has written these posts </div>
    <div class="lobotomize">
      {% for post in posts %}
        {% include post.liquid  %}
      {% endfor %}
    </div>

    {% endif %}


      {% for post in site.posts %}
        {% if forloop.first %}
          i am the first post
        {% else %}
          and the rest
        {% endif %}
      {% endfor %}

    </div>

  </div>
</div>


