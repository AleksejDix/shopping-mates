---
layout: default
---

<section class="section">
  <div class="container">
    <div class="profil clearfix">
      <div class="profil__bild">
        <img class="mate-image" src="{{ page.image | prepend: site.baseurl }}">
      </div>
      <div class="profil__info">
      <header class="title--on-line__wrapper">
        <h1 class="title title--on-line">{{ page.title }}</h1>
      </header>
      <div class="article-content">
        {{ page.content | markdownify }}
      </div>

      </div>
    </div>
  </div>
</section>

{% if page.favourite-product.product-image %}


<section class="section">
  <div class="container">
    <a href="{{ page.favourite-product.product-url }}">
    <figure class="favourite-product">
      <img class="product__image" src="{{ page.favourite-product.product-image }}">
      <figcaption class="product__description">
        {{ page.favourite-product.product-description | markdownify }}
      </figcaption>

    </figure>
    </a>
  </div>
</section>
{% endif %}

<section class="section">
  {% assign posts = site.posts | where: "mate", page.title %}
  <div class="container">
    <div class="grid grid--flex grid--waffle">
      {% for page in posts %}
        <div class="grid__item grid__item--1-3">
          {% include card.liquid  %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% include mates-section.liquid title="Mates" list=site.mates %}
