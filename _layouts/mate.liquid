---
layout: default
---

<section class="section">
  <div class="container">
    <div class="grid">
      <div class="grid__item grid__item--3-13">
        <img class="mate-image" src="{{ page.avatar-image | prepend: site.baseurl }}" alt="">
      </div>
      <div class="grid__item grid__item--5-13">
        <h1 class="Mate__name title title--separator title--h1">
          {{ page.title }}
        </h1>
        <div class="article-content">
          {{ page.content | markdownify }}
        </div>
      </div>
    </div>
  </div>
</section>

<hr>

<section class="section">
  {% assign posts = site.posts | where: "mate", page.title %}
  <div class="container">
    <div class="grid grid--flex grid--waffle">
      {% for page in posts %}
        <div class="grid__item grid__item--1-3">
          {% include card.liquid  %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>



{% include mates-section.liquid title="Mates" list=site.mates %}


