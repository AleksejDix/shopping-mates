---
layout: default
---

<section class="section section--mates-list">
  <div class="container">

  <header class="title--on-line__wrapper">
    <h1 class="title title--on-line">
      Mates
    </h1>
  </header>

  <ul class="list-inline grid grid--waffle">
    {% assign mates = site.mates | sort: 'position' %}
    {% for mate in mates %}
    <li class="grid__item grid__item--1-3">
      {% include card-mate.liquid %}
    </li>
    {% endfor %}
  </ul>

  </div>
</section>
