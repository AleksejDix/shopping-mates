---
layout: default
---

{% if site.mates %}

  <div class="mates">

  {% for mate in site.mates %}
    <div class="mate">
      <a href="{{ mate.url | prepend: site.baseurl }}">
        <img src="{{ mate.image | prepend: site.baseurl }}" alt="{{ mate.title }}">
      </a>
    </div>
  {% endfor %}

  </div>

{% endif %}
