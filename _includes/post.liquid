    <article class="post">
      <div class="post-image-holder">

      {% if post["header image"] contains "cdn.siroop.ch" %}
          <img class="post-image" src="{{ post["header image"] }}" alt="">
      {% else %}
          <img class="post-image" src="{{ post["header image"] | prepend:site.baseurl }}" alt="">
      {% endif %}

      </div>

      <div class="post-meta">

        {% assign mates = site.mates | where:"title", post.mate %}

        {% for mate in mates %}

          {% if mate.image %}
            <div class="avatar" style="background-image: url({{ mate.image | prepend:site.baseurl }})">
            </div>
          {% endif %}

          <div class="post-meta-information">

            by <span class="post-author"><a href="{{ mate.url | prepend:site.baseurl }}">{{ mate.title }}</a></span>
            , <span class="post-date">{{ post.date | date_to_string }}</span>

            {% if mate.twitter_username %}
            <div>
              <a href="https://twitter.com/{{ mate.twitter_username }}">@{{ mate.twitter_username }}</a>
            </div>

            {% endif %}

          </div>

        {% endfor %}

      </div>

      <div class="post-title">
        <a class="post-link" href="{{ post.url | prepend: site.baseurl }}">{{ post.title }}</a>
      </div>

    </article>
