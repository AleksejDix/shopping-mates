<section class="section">
  <div class="container">
    {% if include.title %}
    <header class="title--on-line__wrapper">
      <h2 class="title title--on-line">{{ include.title }}</h2>
    </header>
    {% endif %}
    {% if include.list.size > 0 %}

    {% assign mates = include.list %}

        <ul class="profile-list clearfix">

            <li class="pusher"></li>
          {% for mate in mates %}
            <li>
              <a href="{{ mate.url | prepend:site.baseurl }}">
                <img
                  src="{{ mate.avatar-image | prepend:site.baseurl }}"
                  alt="{{ mate.title }}"
                >
                <div>
                  {{ mate.title }} >
                </div>

                </a>
            </li>
          {% endfor %}
        </ul>


    {% endif %}
    <div class="section__footer text-center">
      <a href="{{ site.baseurl }}/mates/" class="btn">alle Mates ansehen</a>
    </div>

  </div>
</section>
