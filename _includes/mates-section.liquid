    {% if include.title %}
    <header class="title--on-line__wrapper">
      <h2 class="title title--on-line">{{ include.title }}</h2>
    </header>
    {% endif %}
    {% if include.list.size > 0 %}

    {% assign mates = include.list %}
        <ul class="row profile-list clearfix">
          {% for mate in mates %}
          {% if forloop.index == 1 %}

          {% endif %}
          <li class="col col-xs-4">
            <a href="{{ mate.url | prepend:site.baseurl }}">
            <img src="{{ mate.avatar-image | prepend:site.baseurl }}" alt="{{ mate.title }}"/>
            </a>
            <a href="{{ mate.url | prepend:site.baseurl }}">
              <h1 class="profile-list__name headline">{{ mate.title }} <span class="icon arrow_carrot-2right"></span></h1>
            </a>
          </li>{% endfor %}
        </ul>
